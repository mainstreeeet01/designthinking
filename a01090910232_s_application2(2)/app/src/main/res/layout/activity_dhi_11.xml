<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dhi11VM"
            type="com.asapplication.app.modules.dhi11.data.viewmodel.Dhi11VM" />
    </data>

    <LinearLayout
        android:id="@+id/linearColumnvideocamera"
        style="@style/groupStylegray_700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearRowarrowleft"
            style="@style/groupStylebluegray_901"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageArrowleft"
                android:layout_width="@dimen/_6pxh"
                android:layout_height="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_18pxv"
                android:layout_marginBottom="@dimen/_16pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_arrowleft" />

            <TextView
                android:id="@+id/txtSixtyOne"
                style="@style/txtManropesemibold23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_89pxh"
                android:layout_marginTop="@dimen/_11pxv"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_weight="0.8"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_9pxh"
                android:singleLine="true"
                android:text="@{dhi11VM.dhi11Model.txtSixtyOne}"
                tools:text="@string/lbl32" />

            <ImageView
                android:id="@+id/imageHome"
                android:layout_width="@dimen/_27pxh"
                android:layout_height="@dimen/_27pxh"
                android:layout_marginStart="@dimen/_72pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_marginEnd="@dimen/_12pxh"
                android:layout_marginBottom="@dimen/_13pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_home_white_a700_27x27"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_home_white_a700_27x27" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtSixtyTwo"
            style="@style/txtManropesemibold23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13pxh"
            android:layout_marginTop="@dimen/_33pxv"
            android:layout_marginEnd="@dimen/_13pxh"
            android:layout_marginBottom="@dimen/_20pxv"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:text="해당 목적지까지 소요시간 계산 결과"
            tools:text="해당 목적지까지 소요시간 계산 결과" />


        <LinearLayout
            android:id="@+id/linearBus"
            style="@style/groupStylebluegray_901"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_31pxv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSixtyThree"
                style="@style/txtManropesemibold23"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40pxh"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_marginTop="@dimen/_18pxv"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginBottom="@dimen/_20pxv"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:text="현재 버스 정류장 상황" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtSixtyFour"
            style="@style/txtManropesemibold23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13pxh"
            android:layout_marginTop="@dimen/_24pxv"
            android:layout_marginEnd="@dimen/_13pxh"
            android:layout_marginBottom="@dimen/_20pxv"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:text="출발\n사색의 광장: 인원수 적음\n체육대학 앞: 인원수 보통\n정문: 인원수 많음" />

        <TextView
            android:id="@+id/txtSixtyFive"
            style="@style/txtManropesemibold23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_13pxh"
            android:layout_marginBottom="@dimen/_20pxv"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:text="도착\n정문: 인원수 많음\n체육대학 앞: 인원수 보통" />

        <TextView
            android:id="@+id/btnAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="알람설정하기"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />


    </LinearLayout>
</layout>

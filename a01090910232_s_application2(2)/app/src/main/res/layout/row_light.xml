<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <LinearLayout
        android:id="@+id/linearMainlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearColumnmainlight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.94"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMainlight"
                style="@style/txtManroperegular12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:letterSpacing="0.01"
                android:singleLine="true"
                android:text="@string/lbl_main_light"
                tools:text="@string/lbl_main_light" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekBarSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:value="68"
                android:valueFrom="0"
                android:valueTo="100"
                app:labelBehavior="gone"
                app:thumbColor="@color/gray_100"
                app:thumbRadius="@dimen/_7pxh"
                app:trackColorInactive="@color/orange_300" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageNotification"
            android:layout_width="@dimen/_17pxh"
            android:layout_height="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_19pxh"
            android:layout_marginTop="@dimen/_23pxv"
            android:layout_marginBottom="@dimen/_6pxv"
            android:scaleType="fitXY"
            android:src="@drawable/img_notification"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_notification" />
    </LinearLayout>
</layout>
